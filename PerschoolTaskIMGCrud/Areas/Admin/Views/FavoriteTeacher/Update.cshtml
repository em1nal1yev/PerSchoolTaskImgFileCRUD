@using PerschoolTaskIMGCrud.Models
@model PopularTeacher

<div class="container mt-5">
    <h2 class="mb-4">Duzelislerivi ele</h2>

    <form asp-action="Update" method="post">

        <div class="form-group">
            <label>Full Name</label>
            <input asp-for="FullName" class="form-control" placeholder="Full Name" value = "@Model.FullName"/>
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Designation</label>
            <textarea asp-for="Designation" class="form-control" placeholder="Designation" value="@Model.Designation"></textarea>
            <span asp-validation-for="Designation" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>img urli daxil edin</label>
            <textarea asp-for="ImgUrl" class="form-control" placeholder="img urli daxil edin" value="@Model.ImgUrl"></textarea>
            <span asp-validation-for="ImgUrl" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Yadda saxla</button>
        <a href="/Admin/FavoriteTeacher/Index" class="btn btn-secondary">Geri Qayıt</a>
    </form>
</div>
